$columnWidth = 10%

#gregorian
  font-family "Helvetica Neue"
  font-weight 300
  color #fff
  
  #axis-time
    z-index 1
    position absolute
    width 100%
    margin-left $columnWidth + 10%
    background-color #fff
    color #666
    font-size 13px
    
    .col-period
      display inline-block
      width $columnWidth
      padding 10px 0
      
  #container-row
    position absolute
    top 40px
    width 100%
    height 472px
    overflow-x hidden
    overflow-y auto
    
  .row
    position relative
    height 40px
    line-height 40px
    border-bottom 1px solid #e2e2e2
    
    .col-name, .col-background
      display inline-block
      width $columnWidth
    
    .col-name
      vertical-align top
      text-align center
      height 40px
      font-size 13px
      color #666
      border-right 10px solid
      width calc(20% - 10px)
      
    .col-background
      position relative
      height 40px
      transition opacity 200ms
      
      
      &:nth-child(even)
        background-color #f5f5f5
        
      &:nth-child(odd)
        background-color #ececec
        
    .col-event
      cursor pointer
      position absolute
      box-sizing border-box
      height 36px
      line-height 36px
      top 2px
      padding 0 10px
      font-size 12px
      white-space nowrap
      overflow hidden
      text-overflow ellipsis
      
      &:hover
        z-index 9999
        
        
        