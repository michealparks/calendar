#view-auth
  
  .modal
    z-index 1
    width 300px
    height 200px
    margin -100px -150px
    background-color #f8f8f8
    
  input
    display block
    box-sizing border-box
    width 100%
    margin 0 0 15px
    padding 10px
    font-size 13px
    font-family 'Helvetica Neue'
    font-weight 300
    
  .text
    width 100%
    margin auto
    padding 0 0 5px 0
    font-size 14px
  
  .btn-submit
    cursor pointer
    width 50px
    margin 10px auto
    padding 8px
    text-align center
    background-color #fff
    font-size 15px
    